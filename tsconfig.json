{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun"],

    "baseUrl": "./",
    "paths": {
      "#cache-drivers/*": ["src/cache-drivers/*"],
      "#conf/*": ["src/conf/*"],
      "#libs/*": ["src/libs/*"],
      "#use-guards/*": ["src/use-guards/*"],
      "#schemas/*": ["src/schemas/*"],
      "#mods/*": ["src/mods/*"],
      "#open-api/*": ["src/open-api/*"],
      "#utils/*": ["src/utils/*"],
      "#queues/*": ["src/queues/*"]
    }
  }
}
